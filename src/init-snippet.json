{
	"Initialize .stories.svelte file": {
		"prefix": "story-init",
		"body": [
			"import ${TM_FILENAME/(.*).stories.jsx?/$1/} from './${TM_FILENAME/(.*).stories.jsx?/$1/}.svelte';",
			"",
			"export default {",
			"  title: '${1:Atoms}/${TM_FILENAME/(.*).stories.jsx?/$1/}',",
			"  component: ${TM_FILENAME/(.*).stories.jsx?/$1/}",
			"}",
			"",
			"const Template = (args) => ({",
      "  Component: ${TM_FILENAME/(.*).stories.jsx?/$1/},",
      "  props: args",
      "})",
			"",
			"export const ${2:Story} = Template.bind({});",
			"$2.args = {",
      "  $3",
      "}",
      "$0"
		],
		"description": "Initialize Storybook stories file"
	}
}